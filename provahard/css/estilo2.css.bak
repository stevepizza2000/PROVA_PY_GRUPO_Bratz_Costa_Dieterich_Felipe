* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: Arial, Helvetica, sans-serif;
}

body {
    background: #f2f2f2;
    padding: 30px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

h1 {
    margin-bottom: 20px;
    color: #333;
}

p {
    background: white;
    width: 350px;
    padding: 12px 15px;
    margin-bottom: 10px;
    border-radius: 6px;
    box-shadow: 0 0 6px rgba(0,0,0,0.1);
    font-size: 15px;
}

p strong {
    color: #444;
}

a {
    margin-top: 20px;
    display: inline-block;
    text-decoration: none;
    background: #007bff;
    color: white;
    padding: 10px 18px;
    border-radius: 6px;
    transition: 0.2s;
}

a:hover {
    background: #0056b3;
}